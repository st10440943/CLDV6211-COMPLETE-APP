@model CLDV6211_PART1_BOOKING_APP.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure you want to delete this venue?</p>

<div>
    <h3>@Model.VenueName</h3>
    <p>@Model.Location</p>
    <p>Capacity: @Model.Capacity</p>
    <img src="@Model.ImageUrl" alt="Venue Image" width="100" />
</div>

<form asp-action="Delete" asp-route-id="@Model.VenueID" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
