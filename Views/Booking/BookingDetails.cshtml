@model IEnumerable<CLDV6211_PART1_BOOKING_APP.Models.Views.BookingDetailsViewModel>

@{
    ViewData["Title"] = "Booking Details";
}

<h1 class="mb-4">Booking Details</h1>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Booking Date</th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.EventName</td>
                <td>@booking.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@booking.VenueName</td>
                <td>@booking.Location</td>
                <td>@booking.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
