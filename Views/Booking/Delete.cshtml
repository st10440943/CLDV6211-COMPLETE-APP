@model CLDV6211_PART1_BOOKING_APP.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this booking?</h4>
<div>
    <h5>Booking Details</h5>
    <dl class="row">
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Model.Event?.EventName
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Model.Venue?.VenueName
        </dd>
        <dt class="col-sm-2">
            Booking Date
        </dt>
        <dd class="col-sm-10">
            @Model.BookingDate.ToShortDateString()
        </dd>
    </dl>

    <!-- Form to confirm deletion -->
    <form method="post" asp-action="Delete" asp-route-id="@Model.BookingID">
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>

<!-- Display a message in case of any errors (if applicable) -->
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

