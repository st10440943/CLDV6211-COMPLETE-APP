@model CLDV6211_PART1_BOOKING_APP.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h5>Booking Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Booking ID</dt>
            <dd class="col-sm-10">@Model.BookingID</dd>

            <dt class="col-sm-2">Event Name</dt>
            <dd class="col-sm-10">@Model.Event.EventName</dd>

            <dt class="col-sm-2">Event Date</dt>
            <dd class="col-sm-10">@Model.Event.EventDate</dd>

            <dt class="col-sm-2">Venue</dt>
            <dd class="col-sm-10">@Model.Venue.VenueName</dd>

            <dt class="col-sm-2">Venue Location</dt>
            <dd class="col-sm-10">@Model.Venue.Location</dd>

            <dt class="col-sm-2">Booking Date</dt>
            <dd class="col-sm-10">@Model.BookingDate</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd> 
        </dl>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Bookings</a>
    </div>
</div>
