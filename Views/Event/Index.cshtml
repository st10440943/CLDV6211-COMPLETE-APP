@model IEnumerable<CLDV6211_PART1_BOOKING_APP.Models.Event>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@{
    ViewData["Title"] = "Events";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Venue</th>
            <th>Event Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.Venue.VenueName</td>
                <td>@eventItem.EventDate</td>
                <td>
                    <a href="@Url.Action("Edit", "Event", new { id = eventItem.EventID })">Edit</a> |
                    <a href="@Url.Action("Delete", "Event", new { id = eventItem.EventID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Event")" class="btn btn-primary">Create New Event</a>
