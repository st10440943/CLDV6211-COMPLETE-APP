@model CLDV6211_PART1_BOOKING_APP.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueID" class="control-label"></label>
        <select asp-for="VenueID" class="form-control" asp-items="@(ViewData["Venues"] as SelectList)">
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "Event")" class="btn btn-secondary">Back to List</a>

@if (ViewData["Venues"] == null || !(ViewData["Venues"] is SelectList))
{
    <p>No venues found.</p>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
